<h3>Create New test</h3>

<%= form_for @test, url: create_test_path do |f| %>
  <% if @test.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <span class="glyphicon glyphicon-exclamation-sign"></span>
      <span><strong><%= pluralize(@test.errors.count, "error") %> prohibited this subject from being saved:</strong></span>

      <ul>
      <% @test.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-entry">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>
