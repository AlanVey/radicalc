<h1>Listing answers for test named: <%= @test.title %></h1>

<table class='table'>
  <thead>
    <tr>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user.email %></td>
        <td><%= answer.status %></td>
        <% unless answer.value.nil? %>
          <td><%= link_to 'Download', answer.value.url, :target => '_blank' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
