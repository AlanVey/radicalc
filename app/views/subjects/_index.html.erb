<% @subjects.each do |subject| %>
  <% if subject.parent_id.nil? %>
    <li>
      <h3><%= subject.name %></h3>
      
      <div class="ch-item">
        <%= image_tag('topic.png', class: 'img-circle ch-img') %>
        <div class="ch-info-wrap">
          <div class="ch-info">
            <div class="ch-info-front"></div>
            <div class="ch-info-back">
              <h3><%= link_to 'View Topic Page', subject_path(subject.id), :class => "underline-link" %></h3>
            </div>  
          </div>
        </div>
      </div>
    </li>
  
  <% end %>
<% end %>
