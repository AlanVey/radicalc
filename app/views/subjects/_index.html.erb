<h1>Listing subjects</h1>

<table class='table' >
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
        <% if subject.parent_id.nil? %>
          <tr>
            <td><%= link_to subject.name, subject %></td>
            <td><%= subject.body %></td>
            <td><%= subject.user.email %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_root_subject_path %>
