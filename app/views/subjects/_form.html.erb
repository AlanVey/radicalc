<%= form_for(@subject) do |f| %>
  <% if @subject.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <span class="glyphicon glyphicon-exclamation-sign"></span>
      <span><strong><%= pluralize(@subject.errors.count, "error") %> prohibited this subject from being saved:</strong>

      <ul>
      <% @subject.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      </span>
    </div>
  <% end %>


  <%= f.hidden_field :parent_id %>


  <div class="form-entry">
    <p class="mini-p">
	    <%= f.label :name %><br>
	    <%= f.text_field :name %>
    </p>
  </div>

  <div class="form-entry">
    <p class="mini-p">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
  </div>

  <div class="form-entry">
    <p class = "mini-p">
      <%= f.label :icon %><br>
      <%= image_tag @subject.icon.display, :size => "300x300", :class => "img-circle ch-img" %><br>
      <%= f.file_field :icon %>
    </p>
  </div>

  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>
