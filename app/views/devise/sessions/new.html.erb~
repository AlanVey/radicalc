  </div>

  <%= f.label :password %><br />
  <div class="inner-addon left-addon">
    <span class="glyphicon glyphicon-lock"></span>
    <%= f.password_field :password, placeholder:"MyP4s5w0rD", autocomplete: "off", required: "required" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

<p><%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
<p class="signin button"><%= f.submit "Sign in" %></p>
<% end %>


<% end -%>

