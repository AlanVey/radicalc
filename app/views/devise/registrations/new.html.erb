<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

    <table>
      <tr>
        <td>
          <%= f.fields_for :profile do |p| %>
            
            <%= p.label :first_name %><br />
            <div class="inner-addon left-addon">
              <span class="glyphicon glyphicon-user"></span>
              <%= p.text_field :first_name, autofocus: true, placeholder: "John", required: "required" %>
            </div>
        </td>
        <td>
            <%= p.label :last_name %><br />
              <div class="inner-addon left-addon">
              <span class="glyphicon glyphicon-user"></span>
              <%= p.text_field :last_name, autofocus: true, placeholder: "Smith", required: "required" %>
            </div>
        </td>
      </tr>
    </table>
          <% end %>

 <%= f.label :email %><br />
 <div class="inner-addon left-addon">
   <span class="glyphicon glyphicon-envelope"></span>
   <%= f.email_field :email, autofocus: true, placeholder: "myemail@ic.ac.uk", required: "required" %>
  </div>

  <%= f.label :password %><br />
  <div class="inner-addon left-addon">
    <span class="glyphicon glyphicon-lock"></span>
    <%= f.password_field :password, autocomplete: "off", placeholder: "MyP4s5w0rD", required: "required" %>
  </div>

  <%= f.label :password_confirmation %><br />
  <div class="inner-addon left-addon">
    <span class="glyphicon glyphicon-lock"></span>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "MyP4s5w0rD", required: "required" %>
  </div>

  <p class="signin button"><%= f.submit "Sign up" %></p>

<% end %>

<p class="change_link">Already a member?
  <a href="#toregister" class="to_register">Go and log in</a>
</p>

<%= render "devise/shared/links" %>
