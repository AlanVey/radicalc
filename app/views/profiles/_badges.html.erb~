<ul class="ch-grid">
<% @badges = false %>
  <% if @questionsCount >= 1 and @questionsCount < 15 %>
    <li><%= image_tag('questions_bronze.png', class: 'badge_image', title: 'Asked 5 Questions') %></li>
    <% @badges = true %>
  <% end %>
  <% if @questionsCount >= 15 and @questionsCount < 30 %>
    <li><%= image_tag('questions_silver.png', class: 'badge_image', title: 'Asked 15 Questions') %></li>
    <% @badges = true %>
  <% end %>
  <% if @questionsCount >= 30 %>
    <li><%= image_tag('questions_gold.png', class: 'badge_image', title: 'Asked 30 Questions') %></li>
    <% @badges = true %>
  <% end %>

  <% if @answersCount >= 5 and @answersCount < 15 %>
    <li><%= image_tag('answers_bronze.png', class: 'badge_image', title: 'Answered 5 Questions') %></li>
    <% @badges = true %>
  <% end %>
  <% if @answersCount >= 15 and @answersCount < 30 %>
    <li><%= image_tag('answers_silver.png', class: 'badge_image', title: 'Answered 5 Questions') %></li>
    <% @badges = true %>
  <% end %>
  <% if @answersCount >= 30 %>
    <li><%= image_tag('answers_gold.png', class: 'badge_image', title: 'Answered 5 Questions') %></li>
    <% @badges = true %>
  <% end %>

  <% if @commentsCount >= 50 %>
    <li><%= image_tag('top_contributor.png', class: 'badge_image', title: 'Commented over 50 times') %></li>
    <% @badges = true %>
  <% end %>

  <% if Score.where(user_id: @profile.user).any? { |s| s.value =~ /\d+{3}/  } %>
    <li><%= image_tag('100_test.png', class: 'badge_image', title: 'Scored 100% in a test') %></li>
    <% @badges = true %>
  <% end %>
    
</ul>

  <% if not @badges %>
    <p>(No badges to display yet)</p>
  <% end %>
