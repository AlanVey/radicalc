<% @subscriptions.each do |s| %>
    <% if s.parent_id.nil? %>
<script type="text/javascript">
			$(function () {

					$('#proficiency_chart_<%= s.id %>').highcharts({

							chart: {
							    polar: true,
							    events: {
							    load: applyGraphGradient
							    }
							},

							title: {
							    text: '<%= link_to s.name, s %>',
                  useHTML: true
							},

							pane: {
							    startAngle: 0,
							    endAngle: 360
							},

							xAxis: {
							    type: 'category',
  								categories:
									<% if s.children.count == 0 %>
											['<%= s.name %>']
                  <% else %>									
									<%= raw s.children_names.to_json %>
                  <% end %>
							},

							yAxis: {
							    min: 0,
									max: 100
							},

							plotOptions: {
							    column: {
							        pointPadding: 0,
							        groupPadding: 0
							    }
							    
							},

							series: [{
							    showInLegend: false,
							    type: 'column',
							    name: 'Proficiency',
							    color: 'white',
							    data: [ 
									<% if s.children.count == 0 %>
                     {y : <%= rand(40..80) %>, url : <%= raw show_subject_path(s).to_json %> }
                  <% else %>
                  <% s.children.each do |child| %>
									{ y : <%= rand(40..80) %>,
                    url : <%= raw show_subject_path(child.id).to_json %>
                  }
										<% if child != s.children.last %>
											,
										<% end %>
                  <% end %>
                  <% end %>
									],
							    pointPlacement: 'on',
							    cursor: 'pointer',
							    point: {
							        events: {
							            click: function () {
															location.href = this.options.url;
							            }
							        }
							    }
							}]
					});
			});

		</script>
  <% end %>
<% end %>
