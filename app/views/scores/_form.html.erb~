<%= form_for @score, url: url do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
       <span class="glyphicon glyphicon-exclamation-sign"></span>
      <span><strong><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</strong>

      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
	</span>
    </div>
  <% end %>

  <div class="form-entry">
    <p class="mini-p"><%= f.label :value %></p>
    <%= f.text_field :value %>
  </div>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>
