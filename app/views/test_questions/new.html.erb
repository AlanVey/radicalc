<div class="page-main">

<h2>New Question</h2>

<%= form_for @test_question, url: create_test_question_path do |f| %>
  <% if @test_question.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <span class="glyphicon glyphicon-exclamation-sign"></span>
      <span><strong><%= pluralize(@test_question.errors.count, "error") %> prohibited this subject from being saved:</strong>

      <ul>
      <% @test_question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-entry">
    <%= f.label 'Question' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-entry">
    <%= f.label 'Type of question' %><br>
    <%= f.collection_select :kind, TestQuestion.kinds, "to_s", "to_s", {:include_blank => 'Select'} %>
  </div>
  <div class="form-entry">
    <%= f.label :answer %><br>
    <%= f.text_area :answer %>
  </div>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>

<%= link_to 'Back', show_test_path, :class => "btn btn-default" %>

</div>

<%= render 'layouts/sidemenu' %>
