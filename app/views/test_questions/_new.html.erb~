<h3>New Question</h3>

<%= form_for @test_question, url: create_test_question_path do |f| %>
  <% if @test_question.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <span class="glyphicon glyphicon-exclamation-sign"></span>
      <span><strong><%= pluralize(@test_question.errors.count, "error") %> prohibited this subject from being saved:</strong>

      <ul>
      <% @test_question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-entry">
    <%= f.label 'Question' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>
